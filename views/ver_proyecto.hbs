<h1 class="mt-3">Proyecto - {{proyecto.nombre}}</h1>

{{!-- Mostrar los mensajes en caso de existir --}}
{{#if mensajes}}
  {{#each mensajes}}
    <div class="alert {{type}}" role="alert">
      {{error}}
    </div>
  {{/each}}
{{/if}}

<form method="POST" action="/nuevo_proyecto">
  <div class="form-group">
    <label for="nombre">Nombre del proyecto</label>
    <input type="text" class="form-control" id="nombre" name="nombre" value={{proyecto.nombre}} disabled>
  </div>
  <div class="form-group">
    <label for="nombre">Descripci√≥n</label>
    <input type="text" class="form-control" id="descripcion" name="descripcion" value={{proyecto.descripcion}} disabled>
  </div>
  <div class="form-group">
    <label for="nombre">Fecha</label>
    <input type="text" class="form-control" id="fecha" name="fecha" value={{proyecto.fecha}} disabled>
  </div>
  <button type="submit" class="btn btn-primary">Actualizar</button>
</form>